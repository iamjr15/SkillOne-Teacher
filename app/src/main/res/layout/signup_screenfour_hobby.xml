<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSignup"
        style="@style/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="@string/sign_up"
        />

    <TextView
        android:id="@+id/tvAcademics"
        style="@style/academics2"
        android:layout_width="189dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/tvSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/reactangle_circle_style"
        android:gravity="center"
        android:text="@string/hobbys"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAcademics"
        android:layout_marginTop="10dp"
        android:background="@drawable/reactangle_circle_style"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/tvSelectText"
                style="@style/select_the_class"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/select_expertise"
                android:textAllCaps="false"
                />

            <LinearLayout
                android:id="@+id/llNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSelectText"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="143dp"
                        android:layout_height="131dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/black_bg_drawable"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@mipmap/icons8_1st_50px"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            style="@style/class_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/class1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="143dp"
                        android:layout_height="131dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/baby_pink_bg_drawable"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@mipmap/icons8__circled_2_50px"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            style="@style/class_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/class2" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="143dp"
                        android:layout_height="131dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/sky_blue_bg_drawable"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@mipmap/icons8_circled_3_50px"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            style="@style/class_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/class3" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="143dp"
                        android:layout_height="131dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/light_purple_bg_drawable"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@mipmap/icons8_circled_4_50px"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            style="@style/class_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/class4" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="165dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/LLGuitar"
                            android:layout_width="143dp"
                            android:layout_height="131dp"
                            android:layout_margin="10dp"
                            android:background="@mipmap/layers_guitarxhdpi"
                            android:orientation="vertical">
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivGuitar"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_check_circle_green_24dp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="165dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/LLPainting"
                            android:layout_width="143dp"
                            android:layout_height="131dp"
                            android:layout_margin="10dp"
                            android:background="@mipmap/layers_paintingxhdpi"
                            android:orientation="vertical">

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivpainting"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_check_circle_green_24dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="165dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/LLMartialArts"
                            android:layout_width="143dp"
                            android:layout_height="131dp"
                            android:layout_margin="10dp"
                            android:background="@mipmap/layers_martialxhdpi"
                            android:orientation="vertical">

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivMartialArts"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_check_circle_green_24dp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="165dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/LLDrum"
                            android:layout_width="143dp"
                            android:layout_height="131dp"
                            android:layout_margin="10dp"
                            android:background="@mipmap/layers_drumxhdpi"
                            android:orientation="vertical">
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivDrum"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_check_circle_green_24dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="165dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/LLkeyboard"
                            android:layout_width="143dp"
                            android:layout_height="131dp"
                            android:layout_margin="10dp"
                            android:background="@mipmap/layers_keyboardxhdpi"
                            android:orientation="vertical">
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivKeyboard"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_check_circle_green_24dp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="165dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/LLDance"
                            android:layout_width="143dp"
                            android:layout_height="131dp"
                            android:layout_margin="10dp"
                            android:background="@mipmap/layers_dancexhdpi"
                            android:orientation="vertical">


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivDance"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_check_circle_green_24dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnNext"
                    style="@style/next"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/reactangle_circle_style"
                    android:text="@string/next"
                    android:textAllCaps="false" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
