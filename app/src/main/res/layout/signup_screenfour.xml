                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/ic_check_circle_green_24dp"
                                android:visibility="gone" />
                        </RelativeLayout>


                </LinearLayout>

